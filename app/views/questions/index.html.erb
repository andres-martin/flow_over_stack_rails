<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 mt-3">
      <h1>Questions</h1>
      <% if user_signed_in? %>
      <div class="text-right">
        <%= link_to  "Ask a new Question", new_question_path, class: 'btn btn-primary' %>
      </div>
      <% end %>

      <% @questions.each do |question| %>
      <h4><%= link_to  "#{question.title}", question %></h4>
      <p class="publish_by">Published by <%= question.user.email %> <%= time_ago_in_words(question.created_at) %></p>
      <div class="mb-5">
        <% if user_signed_in? && current_user == question.user %>
        <%= link_to 'Edit', edit_question_path(question) %>
        <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>