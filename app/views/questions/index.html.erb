<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 mt-3">
      <h1>Questions</h1>
      <% if user_signed_in? %>
      <div class="text-right">
        <%= link_to  "Ask a new Question", new_question_path, class: 'btn btn-primary' %>
      </div>
      <% end %>

      <% @questions.each do |question| %>
      <h2><%= link_to  "#{question.title}", question %></h2>
      <!-- <td><%= question.title %></td> -->
      <p class="publish_by">Published by <%= question.user.email %> <%= time_ago_in_words(question.created_at) %></p>
      <td><%= link_to 'Show', question %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>

      <%= link_to 'New Question', new_question_path %>
    </div>
  </div>
</div>