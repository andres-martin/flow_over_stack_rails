<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 mt-3">
      <h1><%= form_title %></h1>
      <% if @question.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el tÃ­tulo de la pregunta"  %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control", 
            placeholder: "Escribe tu pregunta", rows: 10 %>
      </div>

      <div>
        <%= f.submit form_submit, class: 'btn btn-primary btn-block btn-lg' %>
      </div>
      <% end %>
      <%= link_to 'Back', questions_path %>
    </div>
  </div>
</div>