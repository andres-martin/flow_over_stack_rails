<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <%= link_to 'Back', root_path %>
      <h1><%= @question.title %></h1>
      <p class="mb-5"><%= @question.content %></p>
      <h4><%= @question.answers.count %> Answer(s)</h4>
      <hr>
      <% @question.answers.each do |answer| %>
        <div><%= answer.content %></div>
      <% end %>

      <% if user_signed_in? %>
      <h4 class="mt-3">Your answer</h4>
      <hr>
        <%= form_for [@question, @question.answers.build] do |f| %>
          <div class="form-group mt-2">
            <%= f.text_area :content, class: "form-control", placeholder: "Write your answer" %>
            <div class="text-right mt-2">
              <%= f.submit 'Submit answer', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
