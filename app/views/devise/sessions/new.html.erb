<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 p-5 mt-4" style='border: 1px solid #ccc; border-radius: 5px;'>
        <div>
          <h2 class='text-center mb-5' style='font-size: 50px'>Log in</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class: "checkbox-inline"%>
                <%= f.label :remember_me %>
            <% end %>

            <div class='form-group row'>
              <div class='col-sm-5 offset-sm-4'>
                <%= f.submit "Log in", class: 'btn btn-primary btn-block btn-lg' %>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links", class: 'text-center' %>
    </div>
  </div>
</div>

